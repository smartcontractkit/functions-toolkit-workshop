{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2022",
    "module": "commonjs",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*", "contracts/abi/**/*.json", ],
  "exclude": ["dist", "build", "node_modules"]
}
